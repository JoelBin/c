#include <stdio.h>
/*
水仙花数
水仙花数指一个N位正整数（N>=>3）,他的每个位上的数字的N次幂之和等于它本身。例如:153=1的3次方+5的3次方+3的3次方。
要求编写程序，计算所有N位水仙花数
*/
int main() {
	int n;
	//scanf("%d", &n);
	n = 3;
	int first = 1;
	int i = 1;
	while (i<n) {
		first *= 10;
		i++;
	}
	printf("first=%d,i=%d\n\n", first,i);	//计算第一个数开始的first

//遍历100-999,并计算每个数
	i = first;
	while (i<first*10) {
		int t = i;
		int sum = 0;
		do
		{
			int d = t % 10;
			t /= 10;
			int p = 1;
			int j = 0;
			while (j < n) {
				p *= d;
				j++;
			}
			sum += p;
		} while (t>0);
		if (sum == i) {
			printf("%d\n", i);
		}
		i++;
	}
	return 0;
}
