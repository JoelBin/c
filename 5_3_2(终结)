#include <stdio.h>
int main()
{
    int a;
    printf("输入一个整数，会计算他的mask以及将该整数从左到右输出，每个数字后加一个空格（最后一位不加）\n");
    scanf_s("%d",&a);

    int mask=1;
    int t=a;
    while(t>9){          //不能使用do while，避免临界点   个位数
        t/=10;
        mask*=10;
    } 
    printf("mask=%d\n",mask);

/*
13425/10000->1
13425%10000->3425
10000/10

3425/1000->3
3425%1000->425
1000/10->100
*/
    do
    {
        int d = a / mask;
        printf("%d", d);
        if (mask>9)        //判断是否加空格，最后一位后不加，所以大于9，也不能使用a判断，应该用mask
        {
            printf(" ");
        }
        a %= mask;
        mask /= 10;
    } while (mask>0);      //存在边界情况，如果输入a为70000，它只会走一次循环，因为70000%10000=0000


    /*
    70000/10000->7
    70000%10000->0
    10000/10->1000       //此处mask为0才算结束，所以条件应为mask>0，而不是a>0
    */
    printf("\n");
    return 0;
}
