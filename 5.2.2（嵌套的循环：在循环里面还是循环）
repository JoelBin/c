#include <stdio.h>
//5.2.2（嵌套的循环：在循环里面还是循环）
//计算是否为素数。一个数可以被1以及它本身整除，不可以被其他整数相除时为素数。
int main()
{
	int x;
	x = 2;
	int cnt = 0;				/*计算前50个素数*/

	//计算前50个素数，首先使用cnt计数器,在使用while
	while(cnt<50)						/*计算前50个素数*/
	// for (x = 2; x < 100; x++) 
	{
		int i;
		int isprime = 1;   //x是素数 ？
		for (i = 2; i < x; i++) {		//i从2开始，因为除以1都可以整除，都是素数。小数点后为0，可以整除，如果小数点后不为0，不能被整除)
			if (x % i == 0) {			//计算x/i是否有余数是否为0。计算余数为0，为素数，余数如果不为零，则不是素数。
				isprime = 0;			//如果上一步不等于0，则执行这一步，设置isprime = 0代表不为素数并跳出循环。
				break;
			}

		}
		if (isprime == 1) {
			printf("%d ", x);
			cnt++;						/*计算前50个素数*/
		}
		x++;							/*计算前50个素数*/
		/*else
		{
			printf("%d不是素数", x);
		}
		*/
	}
	//printf("\n");
	//return 0;

}
