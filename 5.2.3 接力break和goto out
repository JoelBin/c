#include <stdio.h>
//5.2.3 接力break和goto out
// 凑硬币（如何使用1角，2角和5角的硬币凑出10元以下的金额）
int main()
{
    int x;
    int one, two, five;
    //int exit = 0;       //接力break
    //scanf_s("%d", &x);
    x = 2;
    for (one = 1; one < x * 10; one++) {
        for (two = 1; two < x * 10 / 2; two++) {
            for(five=1;five<x*10/5;five++){
                if (one + two * 2 + five * 5 == x * 10) {
                    printf("可以用%d个1角加%d个2角加%d个5角得到%d元\n", one, two, five, x);
                    //exit = 1; /接力break
                    //break;  //接力break
                    goto out;       //goto out退出到指定位置
            }
            }
            //if (exit == 1)break;    //接力break
        }//if (exit == 1)break;       //接力break

    }
    out:                            //goto out退出到指定位置
    return 0;
}
